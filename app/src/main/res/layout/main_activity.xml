<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/activity_main"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#607D8B"
	>

	<ScrollView
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		
		>

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:paddingBottom="25dp"
			android:paddingTop="25dp">

			<android.support.v7.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="10dp"
				app:cardCornerRadius="7dp">

				<LinearLayout
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:orientation="vertical">

					<TextView
						android:layout_width="match_parent"
						android:background="#e5e5e5"
						android:padding="5dp"
						android:textStyle="bold"
						android:layout_height="wrap_content"
						android:text="机型信息"
						android:textColor="#000000"/>

					<TextView
						android:layout_height="match_parent"
						android:layout_width="match_parent"
						android:layout_alignParentRight="true"
						android:text="正在检测..."
						android:gravity="left"
						android:paddingRight="10dp"
						android:textSize="17sp"
						android:id="@+id/info"
						android:layout_margin="5dp"
						android:foreground="?attr/selectableItemBackground"/>

				</LinearLayout>

			</android.support.v7.widget.CardView>

			<android.support.v7.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="10dp"
				app:cardCornerRadius="7dp"
				>

				<LinearLayout
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:orientation="vertical">

					<TextView
						android:layout_width="match_parent"
						android:background="#e5e5e5"
						android:padding="5dp"
						android:textStyle="bold"
						android:layout_height="wrap_content"
						android:text="机型更改"
						android:textColor="#000000"/>

	
					<TextView
						android:layout_height="wrap_content"
						android:layout_width="match_parent"
						android:text="model"
						android:layout_marginTop="5dp"
						android:layout_marginLeft="5dp"/>
					<EditText
						android:layout_height="wrap_content"
						android:layout_width="match_parent"
						android:ems="10"
						android:hint="请输入模型值"
						android:id="@+id/main_activityEditText"
						android:singleLine="true"
					/>

					<TextView
						android:layout_height="wrap_content"
						android:layout_width="match_parent"
						android:text="brand"
						android:layout_marginTop="5dp"
						android:layout_marginLeft="5dp"
					/>
					<EditText
						android:layout_height="wrap_content"
						android:layout_width="match_parent"
						android:ems="10"
						android:hint="请输入商标值"
						android:singleLine="true"
						android:id="@+id/main_activityEditText2"
						/>

					<TextView
						android:layout_height="wrap_content"
						android:layout_width="match_parent"
						android:text="manufacturer"
						android:layout_marginTop="5dp"
						android:layout_marginLeft="5dp"
					/>
					<EditText
						android:layout_height="wrap_content"
						android:layout_width="match_parent"
						android:ems="10"
						android:hint="请输入厂商值"
						android:singleLine="true"
						android:id="@+id/main_activityEditText3"
						/>

					<TextView
						android:layout_height="wrap_content"
						android:layout_width="match_parent"
						android:text="product"
						android:layout_marginTop="5dp"
						android:layout_marginLeft="5dp"
					/>
					<EditText
						android:layout_height="wrap_content"
						android:layout_width="match_parent"
						android:ems="10"
						android:hint="请输入产品值"
						android:singleLine="true"
						android:id="@+id/main_activityEditText4"
						/>

					<TextView
						android:layout_height="wrap_content"
						android:layout_width="match_parent"
						android:text="device"
						android:layout_marginTop="5dp"
						android:layout_marginLeft="5dp"
					/>
					<EditText
						android:layout_height="wrap_content"
						android:layout_width="match_parent"
						android:ems="10"
						android:hint="请输入设备值"
						android:singleLine="true"
						android:id="@+id/main_activityEditText5"
						/>
				
					
					
					<TextView
						android:layout_width="match_parent"
						android:background="#e5e5e5"
						android:padding="5dp"
						android:layout_marginTop="10dp"
						android:textStyle="bold"
						android:layout_height="wrap_content"
						android:text="修改/恢复"
						android:textColor="#000000"/>
					
					
					<TextView
						android:layout_width="match_parent"
						android:background="#F33F77"
						android:padding="10dp"
						android:gravity="center"
						android:textStyle="bold"
						android:layout_marginTop="0dp"
						android:layout_height="wrap_content"
						android:text="修改(ROOT模式)"
						android:textColor="#FFFFFF"
						android:onClick="Modify"
						android:foreground="?attr/selectableItemBackground"
					/>
					
					<TextView
						android:layout_width="match_parent"
						android:background="#F33F77"
						android:padding="10dp"
						android:gravity="center"
						android:textStyle="bold"
						android:layout_marginTop="0dp"
						android:layout_height="wrap_content"
						android:text="修改(MAGISK模式)"
						android:textColor="#FFFFFF"
						android:onClick="Modify_magisk"
						android:foreground="?attr/selectableItemBackground"
					/>
					
				
					<TextView
						android:layout_width="match_parent"
						android:background="#F33F77"
						android:padding="10dp"
						android:gravity="center"
						android:textStyle="bold"
						android:layout_marginTop="1dp"
						android:layout_height="wrap_content"
						android:text="恢复(仅适用于ROOT模式修改)"
						android:textColor="#FFFFFF"
						android:onClick="Recover"
						android:foreground="?attr/selectableItemBackground"
					/>
					
					<TextView
						android:layout_width="match_parent"
						android:background="#e5e5e5"
						android:padding="5dp"
						android:textStyle="bold"
						android:layout_marginTop="0dp"
						android:layout_height="wrap_content"
						android:text="导入/导出"
						android:textColor="#000000"/>
					
				
					<TextView
						android:layout_width="match_parent"
						android:background="#F33F77"
						android:padding="10dp"
						android:gravity="center"
						android:textStyle="bold"
						android:layout_marginTop="0dp"
						android:layout_height="wrap_content"
						android:text="导入"
						android:textColor="#FFFFFF"
						android:onClick="Import"
						android:foreground="?attr/selectableItemBackground"
					/>
					<TextView
						android:layout_width="match_parent"
						android:background="#F33F77"
						android:padding="10dp"
						android:gravity="center"
						android:textStyle="bold"
						android:layout_marginTop="1dp"
						android:layout_height="wrap_content"
						android:text="导出"
						android:textColor="#FFFFFF"
						android:onClick="Derive"
						android:foreground="?attr/selectableItemBackground"
					/>
				</LinearLayout>

			</android.support.v7.widget.CardView>

			

		</LinearLayout>

	</ScrollView>

</RelativeLayout>

